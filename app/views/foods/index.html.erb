<div>

  <%= link_to new_food_path do %>
    <button type='button' name='create_food' class'button'>
      Add food item
    </button>
  <% end %>

  <table>
    <tr>
      <th>Food</th>
      <th>Measurement Unit</th>
      <th>Unit price</th>
      <th>Actions</th>
    </tr>
    <% @display_data.each do |food| %>
      <%= render template: 'shared/food', locals: { food: food } %>
    <% end %>
  </table>
</div>
