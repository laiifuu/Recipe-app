<h1>
    <%= @inventory.name %>
</h1>
<%= button_to "Add food", inventories_path, method: :get %>
<hr>

<table>
    <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Actions</th>
    </tr>
    <% @inventory.inventory_food.includes(:food).each do |invfoo| %>
        <tr>
            <td> <%= invfoo.food.name %> </td>
            <td> <%= invfoo.quantity %> </td>
            <td>
                <%= button_to "Remove", inventories_path, method: :get %>
            </td>
        </tr>
    <% end %>
</table>
