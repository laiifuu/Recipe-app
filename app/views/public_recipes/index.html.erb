<section class="public-recipes-section">  
  <h1>Public Recipes</h1>
  <div class="recipes-container">
    <ul class="recipes-list"> 
      <% @public_recipes.each do |recipe| %>
        <li>
          <h2> <%= recipe.name %> </h2>
          <h3> <%= recipe.user.name %>
          <p> <%= recipe.description %> </p>
          <p>Total food items: <%= recipe.foods.length %> </p>
          <p>Total price $: <%= recipe.total_price%> </p>
          
          </p>
          <div>
            <%= button_to "Check Recipe Details", recipe_path(recipe.id), method: :get%>
            <% if can? :destroy, recipe %>
              <%= button_to "Delete Recipe", recipe_path(recipe.id), method: :delete, data: {turbo: false}%>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</section>